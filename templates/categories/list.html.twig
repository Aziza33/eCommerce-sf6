	<main class="container">
		<section class="row">
			<div class="col-12">

				<h1>Liste des produits de la catégorie
					{{ category.name }}</h1>

				{# {{dump(category.products)}} #}
				<ul>
					{% for product in products %}
						{# <li>{{product.id}} :  {{product.name}}</li> #}
						<div class="col-3 mb-3">
							<article class="card h-100">
								<div class="card-body">
									<h2 class="card-title">{{product.name}}</h2>
									<p class="card-text">{{product.description}}</p>
									<a href="{{ path('products_details', {"id": product.id}) }}" class="btn btn-primary">Voir les détails</a>
								</div>
							</article>
						</div>

					{% endfor %}
				</ul>

			</div>


		</section>

	</main>


{% endblock %}
